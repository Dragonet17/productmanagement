@using ApplicationIdentity.Entities
@using Microsoft.AspNetCore.Identity
@using ProductManagement.Infrastructure.Consts
@model IEnumerable<ProductManagement.Infrastructure.Dtos.ProductDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<div class="row ">
    <div class="col mt-4 mb-4">
        @Html.ActionLink("Create", "Create", null, null, new { @class = "btn btn-outline-primary" })
    </div>
</div>
<div class="row">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                @if (User.IsInRole(Roles.Admin))
                {
                    <th>Operations</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    @if (User.IsInRole(Roles.Admin))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { item.Id }, new { @class = "btn btn-outline-success btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
